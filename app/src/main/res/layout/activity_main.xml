<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:fontFamily="sans-serif-black"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.202" android:id="@+id/MainLabel"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:fontFamily="sans-serif-black"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.609" android:id="@+id/Result"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/WeightText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ems="10"
            android:id="@+id/WeightField"
            app:layout_constraintHorizontal_bias="0.373" app:layout_constraintVertical_bias="0.333"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/HeightText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ems="10"
            android:id="@+id/HeightField"
            app:layout_constraintHorizontal_bias="0.373" app:layout_constraintVertical_bias="0.399"/>
    <Button
            android:text="@string/SubmitText"
            android:layout_width="86dp"
            android:layout_height="40dp" android:id="@+id/SubmitButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.618" app:layout_constraintVertical_bias="0.476"/>


</androidx.constraintlayout.widget.ConstraintLayout>